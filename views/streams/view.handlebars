<div class="row stream-metadata">

  <div class="col-md-12">
    <h1>
      {{stream.title}}
      <span class="small">{{stream.description}}</span>
    </h1>
  </div>

  <div class="formats">
    <div class="download-buttons btn-group btn-group-sm">
      <a class="btn btn-default" href="/output/{{publicKey}}.json">JSON</a>
      <a class="btn btn-default" href="/output/{{publicKey}}.csv"> CSV</a>
    </div>
  </div>

  <div class="tags">
    <div>
      <span class="little-label">Tags</span>
      {{> renderTags stream}}
    </div>
  </div>

</div>

<div class="row">
  <div class="progress-wrapper"></div>
</div>

<div class="row stream-data">

  <div class="col-md-12">

    <table class="table table-striped text-center table-hover">
      <thead></thead>
      <tbody></tbody>
    </table>

  </div>

</div>

<script id="header-template" src="/partials/stream/row.tpl" type="text/x-handlebars-template"></script>
<script id="row-template" src="/partials/stream/row.tpl" type="text/x-handlebars-template"></script>
<script id="stats-template" src="/partials/stream/stats.tpl" type="text/x-handlebars-template"></script>
